<% content_for(:title) { "問診一覧" } %>

<h2 class="text-2xl font-bold mb-4">問診一覧</h2>


<% if @intakes.any? %>
  <div class="bg-white shadow-md rounded-sm overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">タイトル</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">説明</th>
          <% if current_member.admin? %>
          <th class="px-6 py-3"></th>
          <% end %>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @intakes.each do |intake| %>
          <tr>
            <td class="px-6 py-4">
              <%= link_to intake.title, intake, class: "text-blue-600 hover:underline" %>
            </td>
            <td class="px-6 py-4 text-gray-500">
              <%= truncate(intake.description, length: 300) %>
            </td>
            <% if current_member.admin? %>
            <td class="px-6 py-4 text-right">
              <%= link_to "編集", edit_intake_path(intake), class: "text-gray-600 hover:text-gray-800" %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-500">利用できる問診がありません。</p>
<% end %>

<% if current_member.admin? %>
  <%= link_to "新規作成", new_intake_path, class: "fixed bottom-4 right-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-md shadow-lg print:hidden" %>
<% end %>
