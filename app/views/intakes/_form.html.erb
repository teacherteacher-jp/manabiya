<%= form_with(model: intake, local: true) do |f| %>
  <div class="mb-6">
    <%= f.label :title, "タイトル", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :title, placeholder: "問診のタイトル", class: "shadow-sm appearance-none border bg-white #{'border-red-500' if intake.errors[:title].any?} rounded-sm w-full py-2 px-3 text-gray-700 leading-tight focus:outline-hidden focus:shadow-outline" %>
    <% if intake.errors[:title].any? %>
      <p class="text-red-500 text-xs italic mt-1"><%= intake.errors[:title].join(", ") %></p>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.label :description, "説明", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_area :description, placeholder: "問診の説明（任意）", rows: 3, class: "shadow-sm appearance-none border bg-white #{'border-red-500' if intake.errors[:description].any?} rounded-sm w-full py-2 px-3 text-gray-700 leading-tight focus:outline-hidden focus:shadow-outline" %>
    <% if intake.errors[:description].any? %>
      <p class="text-red-500 text-xs italic mt-1"><%= intake.errors[:description].join(", ") %></p>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.label :report_format, "報告書の形式指定", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_area :report_format, placeholder: "レポートをどのような形式でまとめるか、LLMへの指示を記述（任意）", rows: 5, class: "shadow-sm appearance-none border bg-white #{'border-red-500' if intake.errors[:report_format].any?} rounded-sm w-full py-2 px-3 text-gray-700 leading-tight focus:outline-hidden focus:shadow-outline" %>
    <% if intake.errors[:report_format].any? %>
      <p class="text-red-500 text-xs italic mt-1"><%= intake.errors[:report_format].join(", ") %></p>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to "戻る", intakes_path, class: "text-gray-600 hover:text-gray-800" %>
    <%= f.submit submit_text, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 text-sm rounded-md cursor-pointer" %>
  </div>
<% end %>
