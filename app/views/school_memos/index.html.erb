<div class="max-w-7xl mx-auto pb-4">
  <div class="mb-8 sm:mb-12">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-bold text-gray-900">メモ一覧</h3>
      <%= link_to new_school_memo_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        メモを追加
      <% end %>
    </div>

    <% if @school_memos.exists? %>
      <div class="space-y-4 sm:space-y-6">
        <%= render partial: "block", collection: @school_memos, as: :memo %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">メモはまだありません</p>
    <% end %>
  </div>
</div>
