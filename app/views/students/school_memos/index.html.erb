<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">
      <%= @student.name %>さんの記録
    </h1>
    <p class="mt-2 text-sm text-gray-600">
      <%= @student.grade %> |
      <% if @student.parent_member %>
        保護者: <%= @student.parent_member.name %>
      <% end %>
    </p>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">フィルター設定</h2>
    <%= form_with url: student_school_memos_path(@student), method: :get, local: true, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">開始日</label>
          <%= date_field_tag :start_date, params[:start_date], class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">終了日</label>
          <%= date_field_tag :end_date, params[:end_date], class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">並び順</label>
          <%= select_tag :order, options_for_select([['新しい順', 'desc'], ['古い順', 'asc']], params[:order] || 'desc'), class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">表示する項目</label>
        <div class="space-y-2">
          <% [['date', '日付'], ['category', 'カテゴリ'], ['member', '記録者'], ['content', '内容']].each do |value, label| %>
            <label class="inline-flex items-center mr-6">
              <%= check_box_tag "columns[]", value, params[:columns].blank? || params[:columns]&.include?(value), class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              <span class="ml-2 text-sm text-gray-700"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= submit_tag "フィルターを適用", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        <%= link_to "リセット", student_school_memos_path(@student), class: "ml-3 inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-medium text-gray-900">コピー用テキスト</h2>
      <button onclick="copyToClipboard()" class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        コピー
      </button>
    </div>
    <textarea id="export-text" readonly rows="10" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono bg-white"><%= @export_text %></textarea>
    <p id="copy-feedback" class="mt-2 text-sm text-green-600 hidden">クリップボードにコピーしました！</p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">記録一覧（<%= @school_memos.count %>件）</h2>
    <% if @school_memos.any? %>
      <div class="space-y-4">
        <% @school_memos.each do |memo| %>
          <div class="border-l-4 border-indigo-400 pl-4 py-2">
            <div class="flex items-center mb-2">
              <span class="text-sm font-medium text-gray-900"><%= memo.date.strftime('%Y年%-m月%-d日') %>（<%= %w[日 月 火 水 木 金 土][memo.date.wday] %>）</span>
              <span class="ml-3 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800">
                <%= memo.category %>
              </span>
              <span class="ml-3 text-sm text-gray-500">記録者: <%= memo.member.name %></span>
            </div>
            <div class="text-gray-700">
              <%= simple_format(memo.content, class: "text-sm") %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">該当する記録はありません。</p>
    <% end %>
  </div>

  <div class="mt-8 flex justify-between">
    <%= link_to "← 生徒詳細に戻る", student_path(@student), class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500" %>
    <%= link_to "学校メモ一覧 →", school_memos_path, class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>

<script>
function copyToClipboard() {
  const textArea = document.getElementById('export-text');
  textArea.select();
  textArea.setSelectionRange(0, 99999); // For mobile devices

  try {
    document.execCommand('copy');
    const feedback = document.getElementById('copy-feedback');
    feedback.classList.remove('hidden');
    setTimeout(() => {
      feedback.classList.add('hidden');
    }, 3000);
  } catch (err) {
    console.error('Failed to copy text: ', err);
  }
}
</script>
