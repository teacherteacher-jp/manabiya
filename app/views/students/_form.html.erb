<%= form_with(model: student, class: "space-y-4") do |f| %>
  <% if student.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <h2 class="text-red-700 text-lg font-bold mb-2">エラーがあります</h2>
      <ul class="list-disc list-inside text-red-600">
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label(:name, "名前", class: "block text-sm font-medium text-gray-700") %>
    <%= f.text_field(:name, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500") %>
  </div>

  <div>
    <%= f.label :grade, "学年", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :grade,
      Student.grades.map { |k, _| [k, k] },
      { include_blank: "選択してください" },
      class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
    %>
  </div>

  <div>
    <%= f.label :guardian_ids, "保護者", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :guardian_ids,
      Member.order(:name),
      :id,
      :name,
      {},
      { multiple: true, class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" }
    %>
    <p class="mt-1 text-sm text-gray-500">ご家庭の方がManabiyaに登録されている場合は選択してください（Ctrl/Cmdで複数選択可）</p>
  </div>

  <div class="pt-4">
    <%= f.submit("保存する", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 text-sm rounded-md") %>
  </div>
<% end %>
