<div class="max-w-7xl mx-auto pb-4">
  <div class="mb-8 sm:mb-12">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-bold text-gray-900">生徒一覧</h3>
      <% if current_member.admin? %>
        <%= link_to new_student_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          生徒を追加
        <% end %>
      <% end %>
    </div>

    <% if @students.exists? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @students.each do |student| %>
          <%= link_to student_path(student), class: "block bg-white shadow rounded-lg p-4 hover:shadow-md transition-shadow duration-200" do %>
            <div class="text-lg font-medium text-gray-900"><%= student.name %></div>
            <div class="mt-1 text-sm text-gray-500">学年: <%= student.grade %></div>
            <% if student.parent_member.present? %>
              <div class="mt-1 text-sm text-gray-500">保護者: <%= student.parent_member.name %></div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">生徒はまだ登録されていません</p>
    <% end %>
  </div>
</div>
