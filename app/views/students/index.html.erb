<div class="max-w-7xl mx-auto pb-4">
  <div class="mb-8 sm:mb-12">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-bold text-gray-900">生徒一覧</h3>
      <% if current_member.admin? %>
        <%= link_to new_student_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          生徒を追加
        <% end %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @students.each do |student| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h4 class="text-lg font-medium text-gray-900 mb-2"><%= student.name %></h4>
            <p class="text-sm text-gray-500 mb-4">学年: <%= student.grade %></p>
            <div class="flex justify-end">
              <%= link_to '詳細', student_path(student), class: "text-indigo-600 hover:text-indigo-900" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
