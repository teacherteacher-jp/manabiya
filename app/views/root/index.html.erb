<%= render "shared/vacation_notice", vacation_period: @vacation_period %>

<section class="mb-6">
  <h2 class="text-2xl font-bold mb-4">
    スクールのメニュー
  </h2>
  <ul>
    <% @school_menu_items.each do |menu_item| %>
    <li class="mb-2">
      <%= link_to(menu_item[:text], menu_item[:path], class: "inline-block w-full bg-white p-4 rounded-md shadow-md") %>
      </li>
    <% end %>
  </ul>
</section>

<% if @intake_menu_items.any? %>
<section class="mb-6">
  <h2 class="text-2xl font-bold mb-4">
    カスタム問診のメニュー
  </h2>
  <ul>
    <% @intake_menu_items.each do |menu_item| %>
    <li class="mb-2">
      <%= link_to(menu_item[:text], menu_item[:path], class: "inline-block w-full bg-white p-4 rounded-md shadow-md") %>
      </li>
    <% end %>
  </ul>
</section>
<% end %>

<section class="mb-6">
  <h2 class="text-2xl font-bold mb-4">
    コミュニティのメニュー
  </h2>
  <ul>
    <% @community_menu_items.each do |menu_item| %>
    <li class="mb-2">
      <%= link_to(menu_item[:text], menu_item[:path], class: "inline-block w-full bg-white p-4 rounded-md shadow-md") %>
      </li>
    <% end %>
  </ul>
</section>

<section class="mb-6">
  <h2 class="text-2xl font-bold mb-4">
    イベント情報
  </h2>
  <%= render(partial: "events/cards", locals: { events: @recent_events }) %>
  <%= link_to("すべてのイベント情報を見る", events_path, class: "inline-block w-full bg-white mt-4 p-4 rounded-md shadow-md") %>
</section>

<section class="mb-6">
  <h2 class="text-2xl font-bold mb-4">
    メンバーズ
  </h2>
  <ul class="flex flex-wrap gap-4">
    <% Member.order(id: :desc).each do |member| %>
    <li class="flex items-center space-x-2">
      <%= link_to(member, class: "flex items-center space-x-2") do %>
        <%= image_tag(member.icon_url, size: "32x32", class: "rounded-full") %>
        <span class="font-bold"><%= member.name %></span>
      <% end %>
    </li>
    <% end %>
  </ul>
</section>
