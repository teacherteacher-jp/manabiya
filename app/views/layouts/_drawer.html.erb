<%# モバイルドロワー（md:hidden なので PC では非表示） %>
<div data-drawer-target="container" class="hidden md:!hidden fixed inset-0 z-50">
  <%# オーバーレイ %>
  <div data-drawer-target="overlay"
       data-action="click->drawer#close"
       class="absolute inset-0 bg-black/50 opacity-0 transition-opacity duration-300"></div>

  <%# パネル %>
  <div data-drawer-target="panel"
       class="absolute inset-y-0 left-0 w-64 bg-indigo-50 flex flex-col -translate-x-full transition-transform duration-300">
    <%# ヘッダー（閉じるボタン） %>
    <div class="px-6 py-5 flex justify-between items-center">
      <%= link_to root_path, class: "text-2xl font-bold text-indigo-600" do %>
        Manabiya
      <% end %>
      <button data-action="drawer#close" class="text-gray-400 hover:text-gray-600">
        <%= icon("x-mark", css_class: "size-6") %>
      </button>
    </div>

    <%= render "layouts/nav_content" %>
  </div>
</div>
