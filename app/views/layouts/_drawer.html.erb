<%# モバイルボトムシート（md:hidden なので PC では非表示） %>
<div data-drawer-target="container" class="hidden md:!hidden fixed inset-0 z-50">
  <%# オーバーレイ %>
  <div data-drawer-target="overlay"
       data-action="click->drawer#close"
       class="absolute inset-0 bg-black/50 opacity-0 transition-opacity duration-300"></div>

  <%# ボトムシート %>
  <div data-drawer-target="panel"
       class="absolute inset-x-0 bottom-0 h-[50vh] bg-indigo-700 flex flex-col rounded-t-2xl translate-y-full transition-transform duration-300">
    <%# ドラッグハンドル＋閉じるボタン %>
    <div class="shrink-0 pt-3 pb-2 px-6">
      <div class="w-10 h-1 bg-indigo-400 rounded-full mx-auto mb-3"></div>
      <div class="flex justify-between items-center">
        <span class="text-lg font-bold text-white">メニュー</span>
        <button data-action="drawer#close" class="text-indigo-300 hover:text-white">
          <%= icon("x-mark", css_class: "size-6") %>
        </button>
      </div>
    </div>

    <div class="flex-1 overflow-y-auto">
      <%= render "layouts/nav_content" %>
    </div>
  </div>
</div>
