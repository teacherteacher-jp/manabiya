<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Discordメッセージ送信</h1>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: discord_messages_path, local: true, html: { multipart: true } do |form| %>
        <div class="space-y-6">
          <div>
            <%= form.label :channel_id, "チャンネル/スレッドID", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :channel_id,
                  value: @message.channel_id,
                  class: "p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                  placeholder: "例: 1234567890123456789",
                  required: true %>
            </div>
          </div>

          <div>
            <%= form.label :content, "メッセージ", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :content,
                  value: @message.content,
                  rows: 5,
                  class: "p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                  placeholder: "送信するメッセージを入力してください",
                  required: true %>
            </div>
          </div>

          <div>
            <%= form.label :images, "画像（複数選択可）", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.file_field :images,
                  multiple: true,
                  accept: "image/*",
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">最大10ファイル、各ファイル25MBまで（ブーストサーバーは50MB）</p>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
          <%= link_to "キャンセル", root_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
          <%= form.submit "送信", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
