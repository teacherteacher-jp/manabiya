<% content_for(:title) { @intake.title } %>

<div class="max-w-2xl mx-auto">
  <h2 class="text-2xl font-bold mb-4"><%= @intake.title %></h2>

  <% if @intake.description.present? %>
    <p class="text-gray-600 mb-6"><%= @intake.description %></p>
  <% end %>

  <div class="bg-white shadow-md rounded-sm p-6 mb-6">
    <h3 class="font-bold mb-4">この問診について</h3>
    <p class="text-gray-600 mb-4">
      AIアシスタントが対話形式で以下の項目についてお聞きします。
    </p>
    <ul class="list-disc list-inside text-gray-600 mb-6">
      <% @intake.intake_items.each do |item| %>
        <li><%= item.name %></li>
      <% end %>
    </ul>

    <%= form_with url: intake_intake_sessions_path(@intake), method: :post do |f| %>
      <%= f.submit "問診を開始する", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-sm cursor-pointer" %>
    <% end %>
  </div>
</div>
